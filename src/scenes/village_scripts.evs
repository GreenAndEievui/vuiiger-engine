include "../include/script.evs";
include asm "res/charmap.inc";
include asm "entity.inc";

npc xWalkAround {
	lock();
	say("Hello, World!<WAITBTN>");
	wait();
	set_frame("self", ENTITY_FRAME_STEP);
	repeat 60 {
		move("self", 12, 0);
		yield;
	}
	set_frame("self", ENTITY_FRAME_IDLE);
	repeat 60 {
		yield;
	}
	set_frame("self", ENTITY_FRAME_STEP);
	repeat 60 {
		move("self", -12, 0);
		yield;
	}
	set_frame("self", ENTITY_FRAME_IDLE);
	say("Bye!<WAITBTN><CLEAR>");
	wait();
	lock();
}
