include "src/include/script.evs";
#asm
	include "res/charmap.inc";
	include "entity.inc";
#end

npc xWalkAround {
	lock();
	say("Hello, World!<WAITBTN>");
	wait();
	set_frame(ENTITY_FRAME_STEP);
	repeat 60 {
		move(12, 0);
		yield;
	}
	set_frame(ENTITY_FRAME_IDLE);
	repeat 60 {
		yield;
	}
	set_frame(ENTITY_FRAME_STEP);
	repeat 60 {
		move(-12, 0);
		yield;
	}
	set_frame(ENTITY_FRAME_IDLE);
	say("Bye!<WAITBTN><CLEAR>");
	wait();
	lock();
}
